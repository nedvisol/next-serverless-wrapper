{  
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    "__test__/**/*"
  ]
}
